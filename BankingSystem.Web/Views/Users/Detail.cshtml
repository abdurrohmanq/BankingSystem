@using BankingSystem.Domain.Entities.Accounts;
@using BankingSystem.Service.DTOs.Accounts;

@model Account

<section class="vh-100 bg-image"
         style="background-image: url('https://w0.peakpx.com/wallpaper/669/304/HD-wallpaper-gold-n-green-waves-gold-bokeh-green-bright-scrolls-waves-light.jpg');">
<div class="container mt-lg-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h2>Customer Details</h2>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover mt-2">
    <thead>
        <tr>
            @{
                var user = Model;
            }
            <th>@Html.DisplayNameFor(item => user.Id)</th>
            <th>@Html.DisplayNameFor(item => user.FirstName)</th>
            <th>@Html.DisplayNameFor(item => user.LastName)</th>
            <th>@Html.DisplayNameFor(item => user.Email)</th>
            <th>@Html.DisplayNameFor(item => user.Balance)</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <th>
                @Html.DisplayFor(i => user.Id)
                </th>
                <th>
                @Html.DisplayFor(i => user.FirstName)
                </th>
                <th>
                @Html.DisplayFor(i => user.LastName)
                </th>
                <th>
                @Html.DisplayFor(i => user.Email)
                </th>
                <th>
                @Html.DisplayFor(i => user.Balance)
                </th>
                <th>
                    <form asp-controller="Users" method="get">
                        <button class="btn btn-primary" asp-action="Index">Back</button>
                    </form>
                </th>
            </tr>
    </tbody>
</table>

<div class="container mt-lg-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center" >
            <h2>Transfer Money Here</h2>
        </div>
    </div>
</div>

<form asp-controller="Users" asp-action="Transfer" method="post">
    <div class="container">
        <div class="row mt-4">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-outline">
                    <input type="text" id="transferTo" name="transferTo" class="form-control form-icon-trailing" />
                    <label class="form-label" for="transferTo">Transfer To (Id)</label>
                    <span class="trailing pe-auto clear d-none" tabindex="0">✕</span>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <div class="container">
        <div class="row mt-4">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-outline">
                    <input type="text" id="amount" name="amount" class="form-control form-icon-trailing" />
                    <label class="form-label" for="amount">Amount</label>
                    <span class="trailing pe-auto clear d-none" tabindex="0">✕</span>
                </div>
                <input type="hidden" name="checkout" value="@user.Id" />
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-action="Transfer">
                Transfer
            </button>
        </div>
    </div>
</form>
</section>