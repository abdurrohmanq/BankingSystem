@using BankingSystem.Service.DTOs.Accounts;
@model IEnumerable<AccountResultDto>

<section class="vh-100 bg-image"
         style="background-image: url('https://kondowealthadvisors.com/wp-content/uploads/2023/03/Kondo-Banking-Article-Social-Image.jpg');">
<table class="table table-bordered table-hover mt-4">
    <thead>
        <tr>
            @{
                var user = Model.FirstOrDefault();
            }
            <th>@Html.DisplayNameFor(item => user.Id)</th>
            <th>@Html.DisplayNameFor(item => user.FirstName)</th>
            <th>@Html.DisplayNameFor(item => user.LastName)</th>
            <th>@Html.DisplayNameFor(item => user.Email)</th>
            <th>@Html.DisplayNameFor(item => user.Balance)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(i => item.Id)
                </th>
                <th>
                    @Html.DisplayFor(i => item.FirstName)
                </th>
                <th>
                    @Html.DisplayFor(i => item.LastName)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Email)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Balance)
                </th>
                <th>
                    <form asp-controller="Users" method="get">
                        <button class="btn btn-success gradient-custom-4 text-body" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                        <button class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">View and Transaction</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>
</section>